// 详情表格
.detail-table {
  font-family: verdana, arial, sans-serif;
  width: 100%;
  font-size: 14px;
  word-wrap: break-word;
  word-break: break-all;
  color: #333333;
  border-collapse: collapse;
  margin-bottom: 1px;

  .title {
    width: 100px;
    background: rgba(235, 240, 244, 1);
  }

  td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;

    // img {
    //   width: 80px;
    //   height: 80px;
    //   margin: 0 10px 10px 0;
    // }
  }

  .el-image-viewer__close{
    color: #eee;
  }

  th {
    border: 1px solid #ddd;
    text-align: center;
    font-size: 16px;
    color: #585A5E;
    padding: 10px;
    background: #E1E6EB;
    min-height: 48px;
  }
}

// 弹出框样式
.el-dialog__header{
  border-bottom: 1px solid #E0E5EA;
  min-height: 50px;
}
.el-dialog__footer{
  text-align: center;
  background: #FAFCFF;
  border-top: 1px solid #E0E5EA;
}
.el-dialog__body{
      height: 400px;
      overflow: auto;
  }
// 弹出表单中日期选择及选择框的样式
.addForm {
  .el-date-editor.el-input{
    width: 100%;
  }
  .el-select{
    width: 100%;
  }
}
// 详情及其他缩略图
.detail-thumbnail{
  width: 100px;
  height: 100px;
  margin: 0 10px 10px 0;
}

