@import "@/styles/mixin.scss";
.page-main{
  background: #fff;
  border-radius: 50px 0 50px 0;
}

// 主要页面内外壳
.page-container{
  // 对于只有单个列表或其他情况需要上下圆角空白的样式
  &.need-blank {
    padding: 50px 0;
  }
  &.need-blank-top {
    padding-top: 50px;
  }
  &.need-blank-bottom {
    padding-bottom: 50px;
  }
}

// 页面头部按钮
.header-operation {
  padding: 16px 20px;
  // margin-bottom: 24px;
}

// 搜索栏
.table-list-search {
  padding: 10px 40px 0;
  // margin-bottom: 24px;
  border-bottom: 1px solid $blue;
}

.table-list{
  .el-table{
    width: 100%;
    // max-height: 535px;
  }
}

// 统一输入框和选择框宽度
.zzy-input {
  width: 178px;
  max-width: 100%;
}

// 分页
.pagination-container {
  padding: 27px;
}
.el-pagination{
  white-space:pre-wrap;
}
// 弹窗内滚动
.dialog-scroll {
  max-height: 45vh;
}

// 弹窗的全屏按钮
.zzy-dialog-full-screen {
  position: absolute;
  top: 20px;
  right: 46px;
  padding: 0;
  background: 0 0;
  border: none;
  outline: 0;
  cursor: pointer;
  font-size: 16px;
  color: #909399;
}

// 表格样式
.table-header {
  th {
    background: #F5FAFF;
    color: #264288;
  }
}

